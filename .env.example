# 应用配置
APP_ENV=development  # development, testing, production
DEBUG=True
SECRET_KEY=your_secret_key_here
API_PREFIX=/api/v1

# 数据库配置
DATABASE_URL=sqlite:///./app.db
# 如使用PostgreSQL
# DATABASE_URL=postgresql://user:password@localhost:5432/dbname

# 跨域设置
BACKEND_CORS_ORIGINS=["http://localhost:8000", "http://localhost:3000"]

# 微信小程序配置
WECHAT_MINI_APPID=your_mini_appid
WECHAT_MINI_SECRET=your_mini_secret

# 微信公众号配置
WECHAT_MP_APPID=your_mp_appid
WECHAT_MP_SECRET=your_mp_secret
WECHAT_MP_TOKEN=your_mp_token
WECHAT_MP_AES_KEY=your_mp_aes_key

# 微信支付配置
WECHAT_PAY_MCHID=your_mchid
WECHAT_PAY_KEY=your_pay_key
WECHAT_PAY_CERT_PATH=path/to/cert/apiclient_cert.pem
WECHAT_PAY_KEY_PATH=path/to/cert/apiclient_key.pem

# JWT设置
JWT_SECRET_KEY=your_jwt_secret
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30 